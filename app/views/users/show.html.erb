<h2>User info</h2>
<table class="table">
  <tbody>
    <tr>
      <th>
        <% if @user.profile_image.attached? %>
          <%= @user.profile_image %>
        <% else %>
          <%= image_tag 'no_image' %>
        <% end %>
      </th>
    </tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_user_path %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>

    </tr>
  </tbody>
</table>